<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/calibration_done_flipped"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="@color/slate_grey"
        android:orientation="vertical"
        android:rotation="90"
  >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="60dp"
            android:rotationY="90"
            android:text="@string/ready_for_perimetry_instructions"
            android:textColor="@color/black_overlay"
            android:textSize="25sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@color/teal"
            android:onClick="onDistanceCalibrated"
            android:rotationY="90"
            android:text="@string/ready_for_perimetry_button" />
    </LinearLayout>
